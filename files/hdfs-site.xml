<configuration>
  <configuration>

  <!-- DataNode RPC 服务绑定端口 -->
  <property>
    <name>dfs.datanode.address</name>
    <value>0.0.0.0:10040</value> <!-- 改成 1024 以上 -->
  </property>

  <property>
    <name>dfs.datanode.http.address</name>
    <value>0.0.0.0:10060</value> <!-- 改成 1024 以上 -->
  </property>

  <property>
    <name>dfs.datanode.ipc.address</name>
    <value>0.0.0.0:10080</value> <!-- 建议也设置 -->
  </property>

  <!-- DataNode 数据目录 -->
  <property>
    <name>dfs.datanode.data.dir</name>
    <value>file:/home/ljiang/hadoop_tmp/dfs/data</value>
  </property>

  <!-- 如果你禁用了 Kerberos，还需要这项为 false -->
  <property>
    <name>dfs.permissions.enabled</name>
    <value>false</value>
  </property>

</configuration>

</configuration>
